<div class="col col-12 col-md-6 col-lg-4 mb-4">
  <div class="card h-100">
    <img src="https://source.unsplash.com/random/400x300" class="card-img-top" alt="unsplash it">
    <div class="card-body">
      <h5 class="card-title"><%= cocktail.name %></h5>
      <h6 class="card-subtitle mb-2 text-muted">Ingredients</h6>
      <p class="card-text">
        <ul>
          <% cocktail.ingredients.each do |ingredient| %>
            <li><%= ingredient.name %></li>
          <% end %>
        </ul>
      </p>
    </div>
    <div class="card-footer d-flex justify-content-around">
      <a href="#" class="card-link">More...</a>
      <%= link_to icon('fas', 'info-circle', class: 'strong'), cocktail_path(cocktail) %> 
      <%= link_to icon('fas', 'edit', class: 'strong'), cocktail_path(cocktail) %>  
      <%= link_to icon('fas', 'trash', class: 'strong'), cocktail_path(cocktail), method: :delete, data: { confirm: 'Are you sure?' } %> 
    </div>
  </div>
</div>